#   Ensure the SQLite 3 gem is defined in your Gemfile
#   gem 'sqlite3'
development:
  adapter: mysql2
  encoding: utf8
  reconnect: false
  database: blogdevelopment
  pool: 5
  username: blogdevelopment
  password: 123456
  host: localhost
  port: 3306

# Warning: The database defined as "test" will be erased and
